<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      Title="Ferry Shuttle Console"
                      MinSize="200 150">
    <BoxContainer Orientation="Vertical"
                  Margin="5">
        <Label Name="Cooldown"
               HorizontalAlignment="Center"
               Text="00:00"/>
        <BoxContainer Name="StatusContainer" Orientation="Horizontal"
                      Margin="5"
                      HorizontalAlignment="Center">
            <Label Name="Status"
                   HorizontalAlignment="Center"
                   Text="Status: "/>
            <Label Name="Location"
                   HorizontalAlignment="Center"
                   Text="Unknown"/>
        </BoxContainer>
        <Button Name="LaunchButton" Text="Send to wherever"/>
    </BoxContainer>
</controls:FancyWindow>
